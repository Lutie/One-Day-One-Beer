{% extends 'base.html.twig' %}

{% block body %}

    <legend>Today's Beer</legend>

    <div class="row">
        {% if picture.name %}
            <div class="offset-3 col-6">
                <h3 class="delay-picture-ttl">{{ picture.name }}<h3>
            </div>
        {% endif %}
        <div class="offset-3 col-6">
            <img class="delay-picture" alt="picture" src="{{ asset('uploads/pictures/' ~ picture.path ) }}">
        </div>
        {% if picture.description %}
            <div class="offset-3 col-6">
                <p class="delay-picture-desc">"{{ picture.description }}"<p>
            </div>
        {% endif %}
        {% if picture.author %}
            <div class="offset-3 col-6">
                <p class="delay-picture-author">Proposed by <b>{{ picture.author }}</b><p>
            </div>
        {% endif %}
    </div>

{% endblock %}