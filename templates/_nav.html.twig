{% set route = app.request.attributes.get('_route') %}

<nav id="menubar" class="collapse show">
  <ul class="pt-3 pb-2 pt-md-2 nav nav-fill navbar-dark d-flex flex-column align-items-center flex-md-row">
    <li class="nav-item {{ route ends with 'about' ? 'active' }}">
      <a href="{{ path('about') }}" class="nav-link">
        <i class="fas fa-book fa-2x"></i> About</a>
    </li>
    <li class="nav-item {{ route ends with 'picture-submit' ? 'active' }}">
      <a href="{{ path('picture-submit') }}" class="nav-link">
        <i class="fas fa-beer fa-2x"></i> Submit a Picture</a>
    </li>
    <li class="nav-item {{ route ends with 'about-us' ? 'active' }}">
      <a href="{{ path('about-us') }}" class="nav-link">
        <i class="fas fa-user fa-2x"></i> About Us</a>
    </li>
  </ul>
</nav>